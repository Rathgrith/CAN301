            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="15dp"
                android:text=" Unknown" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
