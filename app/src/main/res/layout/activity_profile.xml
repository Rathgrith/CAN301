<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@color/navy">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profileIV"
                        android:layout_width="1200dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="40dp"
                        android:src="@drawable/default_prof"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/emailTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="190dp"
                        android:gravity="center"
                        android:text="UserEmailHere@gmail.com"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="200dp">

                <TextView
                    android:id="@+id/nicknameTV"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/ic_baseline_account_box_24"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text=" UserNickName"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cashTV"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nicknameTV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/ic_baseline_monetization_on_24"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text=" 0"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timeTV"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cashTV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/ic_baseline_alarm_24"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text=" 0"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dayTV"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeTV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:gravity="left"
                    android:padding="20dp"
                    android:text=" 0"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_log_out"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dayTV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10pt"
                    android:backgroundTint="@color/teal_700"
                    android:padding="10dp"
                    android:text="log out" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_below="@+id/btn_log_out"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:padding="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/xjtlulogo"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>