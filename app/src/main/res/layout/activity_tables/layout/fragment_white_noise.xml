<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/p0"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:background="@color/navy">

            <TextView
                android:id="@+id/white_noise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="2dp"
                android:text="White Noise"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="7"
            android:background="#10010544"
            android:layout_centerHorizontal="true"
            android:gravity="center">
            <TextView
                android:gravity="center"
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"
                android:text="Findings reveal the positive impact of exposure to relaxing nature sounds on university students' psychological well-being and cognitive performance, as well as the potential of mobile applications to provide easy exposure to nature sounds."
                android:background="@drawable/border_textview"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>
        <ListView
            android:id="@+id/noise_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:dividerHeight="10dp"
            android:divider="#00000000"
            android:background="@drawable/border_transparent"
            android:fadeScrollbars="true"
            android:horizontalSpacing="15dp"
            android:numColumns="2"
            android:padding="15dp"
            android:verticalSpacing="15dp"/>

    </LinearLayout>
</LinearLayout>